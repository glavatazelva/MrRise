<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_time"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTimeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/timePicker"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_hint"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/tvLabelTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDaysTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDaysTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMonday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/monday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTuesday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tuesday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWednesday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wednesday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipThursday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/thursday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFriday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/friday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSaturday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/saturday"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSunday"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sunday" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPuzzleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puzzle_type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llDays"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/rgPuzzleType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPuzzleTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbSimonSays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puzzle_simon"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbMath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puzzle_math" />

            <RadioButton
                android:id="@+id/rbQRCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/puzzle_qr" />

        </RadioGroup>

        <TextView
            android:id="@+id/tvSoundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_sound"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rgPuzzleType"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llSoundSelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSoundTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:id="@+id/spinnerSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnPreviewSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="â–¶"
                android:textSize="20sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save_alarm"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/llSoundSelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>